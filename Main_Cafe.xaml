            <!--선택한 리스트 영역-->
            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="7*"/>
                    </Grid.RowDefinitions>

                <!-- 결제선 타이틀 -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Border BorderThickness="1" BorderBrush="Black">
                            <TextBlock  VerticalAlignment="Center" TextAlignment="Center" Text="제품명" FontWeight="Bold"/>
