                        </Border>
                    </Grid>
                </Grid>

                <!--제품 선택 목록-->
                <Grid Grid.Row="1">
                    <ListView x:Name="paymentListView" HorizontalAlignment="Left" Width="600">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="180" Header="제품명" DisplayMemberBinding="{Binding ProductName}"/>
                                <GridViewColumn Width="40">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="-" Height="25" Width="25" HorizontalAlignment="Center"  Click="BtnMinus_Click"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="30" Header="수량" DisplayMemberBinding="{Binding ProductQuantity}"/>
                                <GridViewColumn Width="40">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="+" Height="25" Width="25" HorizontalAlignment="Center"  Click="BtnPlus_Click"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="50" Header="가격" DisplayMemberBinding="{Binding ProductPrice}"/>
                                <GridViewColumn Width="40">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="x" Height="25" Width="25" HorizontalAlignment="Center"  Click="BtnDelete_Click"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Grid>

            <!--결제 영역 -->
            <Grid Grid.Row="4">
