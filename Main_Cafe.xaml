<Window x:Class="WPF_project_Cafe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_project_Cafe"
        mc:Ignorable="d"
        Title="Cafe" Height="600" Width="300">

    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <!--언어 선택영역 분할하기-->
                <RowDefinition Height="0.6*" />

                <!--메뉴바 선택영역 분할하기-->
                <RowDefinition Height="0.3*" />

                <!--메뉴 선택영역 분할하기-->
                <RowDefinition Height="3*" />

                <!--선택한 리스트 영역 분할하기-->
                <RowDefinition Height="2*" />

                <!--결제 영역 분할하기-->
                <RowDefinition Height="0.5*" />
            </Grid.RowDefinitions>
            
            <!--언어 선택영역-->
            <Grid Grid.Row="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                           
                    <Grid Grid.Column="0" Background="#eee">
                        <Button>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="0.5*"/>
                                </Grid.RowDefinitions>
                                
                                <Grid Grid.Row="0">
                                    <Image Name="Kor"/>
                                </Grid>
                                
                                <Grid Grid.Row="1">
                                    <TextBlock  TextAlignment="Center" Text="한국어" FontWeight="Bold"  />
                                </Grid>
                            </Grid>
                        </Button>
                    </Grid>

                    <Grid Grid.Column="1" Background="#eee">
                        <Button>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="0.5*"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Image Name="Eng"/>
                                </Grid>

                                <Grid Grid.Row="1">
                                    <TextBlock  TextAlignment="Center" Text="English" FontWeight="Bold"  />
                                </Grid>
                            </Grid>
                        </Button>
                    </Grid>
                    
                    <Grid Grid.Column="2" Background="#eee">
                        <Button>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="0.5*"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Image Name="Chn"/>
                                </Grid>

                                <Grid Grid.Row="1">
                                    <TextBlock  TextAlignment="Center" Text="中國語" FontWeight="Bold"  />
                                </Grid>
                            </Grid>
                        </Button>
                    </Grid>

                    <Grid Grid.Column="3" Background="#eee">
                        <Button>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="0.5*"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Image Name="Jpn"/>
                                </Grid>

                                <Grid Grid.Row="1">
                                    <TextBlock  TextAlignment="Center" Text="日本語" FontWeight="Bold"  />
                                </Grid>
                            </Grid>
                        </Button>
                    </Grid>
                                                                                  
                </Grid>
            </Grid>

            <!--메뉴바 선택영역-->
            <Grid Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                      
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                

                    <Grid Grid.Column="0" Background="DarkGray">
                        <Button Content="음료" FontWeight="Bold" Margin=" 10 5 10 0"  Background="White"  BorderThickness="0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10 10 0 0" />
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>

                    <Grid Grid.Column="1" Background="DarkGray">
                        <Button Content="디저트" FontWeight="Bold" Margin=" 10 5 10 0"  Background="White"  BorderThickness="0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10 10 0 0" />
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>

                    <Grid Grid.Column="2" Background="DarkGray">
                        <Button Content="기타" FontWeight="Bold" Margin=" 10 5 10 0"  Background="White"  BorderThickness="0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10 10 0 0" />
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
            
            <!--메뉴 선택영역-->
            <Grid Grid.Row="2">
                <Border BorderThickness="1" BorderBrush="Black">
                   
                        <TextBlock  VerticalAlignment="Center" TextAlignment="Center"  Text="메뉴 선택 영역"/>
                  
                </Border>
            </Grid>
            
            <!--선택한 리스트 영역-->
            <Grid Grid.Row="3">
                <Border BorderThickness="1" BorderBrush="Black">
                    <TextBlock  VerticalAlignment="Center" TextAlignment="Center" Text="결제창 영역"/>
                </Border>
               
            </Grid>
            
            <!--결제 영역 -->
            <Grid Grid.Row="4">
                <Border BorderThickness="1" BorderBrush="Black">
                    <TextBlock  VerticalAlignment="Center" TextAlignment="Center" Text="결제 버튼 영역"/>
                </Border>
               
            </Grid>
     

        </Grid>
    </Border>

</Window>
